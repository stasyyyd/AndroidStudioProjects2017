<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dvfu.ru.myapplication.EditActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="221dp"
        android:layout_height="36dp"
        android:layout_marginBottom="32dp"
        android:text="Вопрос №1"
        app:layout_constraintBottom_toTopOf="@+id/radioButton"
        tools:layout_editor_absoluteX="16dp" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="вариант 1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="77dp" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="вариант 2"
        app:layout_constraintBottom_toTopOf="@+id/radioButton3"
        tools:layout_editor_absoluteX="16dp" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="116dp"
        android:layout_height="33dp"
        android:baselineAligned="false"
        android:text="вариант 3"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="199dp" />

    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_width="120dp"
        android:layout_height="38dp"
        android:text="вариант 4"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="280dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="предыдущий"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="386dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Следующий"
        tools:layout_editor_absoluteX="252dp"
        tools:layout_editor_absoluteY="386dp" />

</LinearLayout>
